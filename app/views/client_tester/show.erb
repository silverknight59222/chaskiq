

<% @encrypted_data %>

<% content_for :head do %>
  <meta 
    name="viewport" 
    content="width=device-width, initial-scale=1.0, user-scalable=no" 
  />
<% end %>

<% content_for :body do %>
  <%= render "simple" %>

  <script>
    (function(d,t) {
      var g=d.createElement(t),s=d.getElementsByTagName(t)[0];
      g.src="<%= Rails.application.routes.default_url_options[:host] %>/embed.js"
      s.parentNode.insertBefore(g,s);
      g.onload=function(){
        new window.ChaskiqMessengerEncrypted({
          domain: '<%=@h[:http] +request.env["HTTP_HOST"]%>',
          ws:  '<%=@h[:ws]+ request.env["HTTP_HOST"] + "/cable" %>',
          app_id: "<%= @app.key %>",
          data: "<%=@encrypted_data%>",
          lang: "<%= @lang %>"
        })
      }
    })(document,"script");
  </script>

<% end %>

